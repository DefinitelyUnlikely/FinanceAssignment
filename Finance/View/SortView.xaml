<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finance.View.SortView"
             Title="Sort By">
        <VerticalStackLayout Margin="10,0,10,0">
                <Label Text="Sort by"/>
                <Button Text="Year"
                        Clicked="OnYearClicked"/>
                <Button Text="Month"
                        Clicked="OnMonthClicked"/>
                <Button Text="Week"
                        Clicked="OnWeekClicked"/>
                <Button Text="Day"
                        Clicked="OnDayClicked"/>
        </VerticalStackLayout>
</ContentPage>